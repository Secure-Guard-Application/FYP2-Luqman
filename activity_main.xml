<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C70D5ED7"
    android:padding="16dp"
    android:gravity="center">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Guard Application"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Safe, Be aware of what you do"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Buttons section -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center">

        <!-- URL scanner device -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            android:onClick="openURLscanner">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/scan_device" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link URL Scanner"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- QR Scanner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            android:onClick="openQRscanner">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/qr_scanner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR Scanner"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Browser Log History -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            android:onClick="openLogHistory">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/browser_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log History"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Malware Scanner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:padding="16dp"
            android:gravity="center"
            android:clickable="true"
            android:onClick="openMalwareScanner">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/faq_ic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>